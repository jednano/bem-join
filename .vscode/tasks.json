{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": ["$tsc"]
		},
		{
			"type": "npm",
			"script": "lint",
			"problemMatcher": {
				"base": "$tslint5",
				"fileLocation": "relative"
			}
		},
		{
			"type": "npm",
			"script": "test",
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "watch",
			"group": "test"
		}
	]
}
